<%- include("partials/header") -%>

<h1>Compose</h1>
<!-- Form submission from user input -->
<form class="" action="/compose" method="POST">
    <div class="form-group">
        <label for="InputTitle">Title</label>
        <input type="title" class="form-control" name="postTitle" placeholder="New Title" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="InputText">Post</label>
        <textarea type="text" class="form-control" name="postText" placeholder="New Post" cols="40" rows="5"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button" value="">Publish</button>
</form>

<%- include("partials/footer") -%>